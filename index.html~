<html>
	<head>
		<script src='wax/ext/modestmaps.min.js' type='text/javascript'></script>
		<script src='wax/dist/wax.mm.js' type='text/javascript'></script>
		<link href='wax/theme/controls.css' rel='stylesheet' type='text/css' />	
		<!--//add to phase 2 -->
 		<script src="wax/mmg/mmg.js"></script>
    		<script src="wax/mmg/mmg_interaction.js"> </script>
		<script src="wax/mmg/simplestyle_factory.js"> </script>
		<link rel="stylesheet" href="wax/mmg/mmg.css"/>
		
	</head>

	<body>
		<div id="map" style="width: 100%; height: 100%">
		<script type="text/javascript" language = "javascript">
			var url = 'http://a.tiles.mapbox.com/v3/galligalli.map-3i95v1d3.jsonp';
			
			wax.tilejson(url, function(tilejson) {
    			// Set up a map in a div with the id 'map'
    			var m = new MM.Map('map',
      			// Use Wax's connector to add a new custom layer
			new wax.mm.connector(tilejson)
			);
			//adding a zoom tool
			wax.mm.zoomer(m, tilejson).appendTo(m.parent);
			m.setCenterZoom({ lat: 27.7, lon: 85.3 }, 15);
			});
		
			//add to phase 2
			var markerLayer = mmg().factory(simplestyle_factory)
    			 //URL of our GeoJSON
			//.url('practice.geojson');
			//map.addLayer(markerLayer);
			
			
			</script>
		</div>
	</body>

</html>
